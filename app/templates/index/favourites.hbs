<div class="favourites-padder">
	<div class="text-center"><h1 class="font-times-header">MY FAVOURITES</h1>
		{{#if model.user.favourites}}
			<p class="font-times-subheader">
				Simply click the heart to remove the idea from your board, or click through to chat to the supplier about the details. 
			</p><br>
		{{else}}
			<h3>It looks like you don't have any favourites yet!</h3>
			<h3>Click here to explore</h3>
			{{#link-to 'categories'}}<button class="btn btn-lg btn-default clbutton-grey">Categories</button>{{/link-to}}
		{{/if}}
	</div>
	{{#image-loader}}
	<div class="text-center" id="#imageLoaderDiv">
			{{#masonry-grid items=model.user.favourites isFitWidth=true columnWidth=360 storeMasonryRef="storeMasonryRef" gutter=8 as |cat-item|}}
				<div>
					<div class="category-block">
						<div class="cat-overlay-1">
							<h2>{{cat-item.name}}</h2>
						</div>
						{{#link-to 'single-item' cat-item.id tagname='div' class="text-center cat-img-container"}}
							{{#image-component loadedImg="loadedImg" src=cat-item.imageURL class="img-responsive cat-image"}}{{/image-component}}
						{{/link-to}}
						<div class="cat-overlay-2">
							{{#favourite-button cat-item.id session.currentUser.providerData.0.uid}}{{/favourite-button}}
						</div>
						
					</div>
				</div>
			{{/masonry-grid}} 	
	</div>
	{{/image-loader}}
	<div class="row text-center showOnPhones">
	    {{#each model.user.favourites as |cat-item|}}
		<div class="col-lg-4 col-md-6">
			<div class="category-block-mobile">
				<div class="mobile-overlay-1">
					<h2>{{cat-item.name}}</h2>
				</div>
				{{#link-to 'single-item' cat-item.id tagname='div' class=" text-center cat-img-container"}}
					<img src="{{cat-item.imageURL}}" class="img-responsive mobile-image">
				{{/link-to}}
				<div class="mobile-overlay-2">
					<div class="mobile-button-container">	
						{{#favourite-button cat-item.id session.currentUser.providerData.0.uid}}{{/favourite-button}}
					</div>
				</div>
			</div>
		</div>
	    {{/each}}
	</div>
</div>