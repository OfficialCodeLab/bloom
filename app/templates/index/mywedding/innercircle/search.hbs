			</div> --}}
		</div>
	</div>
	<div class="row">
		{{#mdl-button isRaised=true isAccent=true action="backBtn"}}Cancel{{/mdl-button}}&nbsp;
		{{#mdl-button isRaised=true action="searchUser" disabled=isDisabled}}Search {{#if searching}}<i class="fa fa-spinner fa-spin"></i>{{/if}}{{/mdl-button}}
	</div>
	{{#if responseMessage}}
		<div class="row text-center">
		    <div class="col-sm-offset-2 col-sm-8 alert alert-warning" {{action 'closeMessage'}}>{{responseMessage}}
		    <p class="tiny-text">Tap this message to close it</p></div>
	    </div>
	{{/if}}
	{{#if searchResults}}
		<div id="searchRes" class="row">
			<h3>Search Results</h3>
			{{#mdl-table content=searchResults as |user|}}
		      {{#mdl-table-col label='Full Name'}}
		        {{user.name}}
		      {{/mdl-table-col}}
		      {{#mdl-table-col label='Send Request'}}
		        <button class="btn btn-success" disabled={{user.adding}} {{action "addInnerCircle" user}}>Add{{#if user.adding}}<i class="fa fa-spinner fa-spin"></i>{{/if}}</button> 
		      {{/mdl-table-col}}
		    {{/mdl-table}}
		</div>
	{{/if}}
