	<div class="row">
	{{!-- <button class="col-sm-3 btn btn-default" {{action 'backBtn'}}>Back</button> --}}
	<h3 class="text-center" style="margin-top:0px; padding-top:0px;">Add Inner Circle Members</h3>
	</div>
	<br>
	<div class="form-horizontal row">
		<div class="form-group has-feedback">
			<div class="col-sm-6 col-sm-offset-3" style="padding-top:5px">
				{{mdl-textfield disabled=searching label='Name to search for' value=name}}
				{{!-- {{input type="text" disabled=searching value=name class="form-control" placeholder="Name to search for"}} --}}
			</div>
			{{!-- <div class="col-sm-3" style="padding-top:5px">
