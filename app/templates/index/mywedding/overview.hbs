<div class="container-fluid">
   {{!-- {{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}} --}}
    <h1 class="font-times-header" style="color: #4C4C4E;">Overview</h1><br>
    <hr>

    <div style="padding-bottom:60px;">

        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="pear-profile-card guide-xs-card overview-block" style="z-index: 3;">
                    <div class="overview-sm-block" style="background-image: url(../assets/images/overview2.jpg)">
                        <div class="overlay-green">
                        </div>

                    </div>
                    <div class="overview-white-text">

                        {{#if selectedDate}}
                            <p style="font-size: 72px; padding-top: 30px; font-weight: 600;">{{daysNum}}</p>
                            <p style="padding-top: 15px;">{{daysString}}</p>
                            <p style="font-size: 30px; padding-top: 20px; font-weight: 600;">{{dateComputed}}</p>
                            <p>Wedding Date</p>
                        {{else}}
                            <p style="font-size: 24px; padding-top: 100px;">Please select your wedding date :)</p>
                        {{/if}}

                        <div class="overview-box-bottom {{if selectedDate "padding-25" "padding-75"}}">
                            {{#md-datepicker placeholder="Pick your wedding date" selectedDate=selectedDate dateChanged="dateChanged" minDate=dateCurrent}} {{/md-datepicker}}                        
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-5 col-sm-6">
                <div class="pear-profile-card guide-xs-card overview-block" style="z-index: 2;">

                    <div class="overview-md-block">
                        <h5>Personal Information</h5>

                        <div style="padding-top: 10px;">
                            <div class="col-xs-2 overview-info"><i class="material-icons">mail_outline</i></div>
                            <div class="col-xs-10 overview-info">{{email}}</div>
                            <div class="col-xs-2 overview-info"><i class="material-icons">call</i></div>
                            <div class="col-xs-10 overview-info">{{cell}}</div>
                            <div class="col-xs-2 overview-info"><i class="material-icons">place</i></div>
                            <div class="col-xs-10 overview-info">{{city}}</div>
                            <div class="col-xs-2 overview-info"><i class="material-icons">cake</i></div>
                            <div class="col-xs-10 overview-info">{{#if birthday}}{{birthdayComputed}}{{/if}}</div>
                        </div>

                        <div class="overlay-box-bottom">
                            {{#link-to 'myaccount'}}{{mdl-button text="Edit Account"}}{{/link-to}}                      
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                {{#link-to 'vendor-profile' topVendor.id}}<div class="pear-profile-card guide-xs-card overview-block" style="z-index: 2; cursor: pointer;">
                    <div class="overview-lg-block" style="background-image: url(../assets/images/overview3.jpg)">
                        <div class="overlay-pink">
                        </div>

                    </div>
                    <div class="overview-white-text" style="padding-top: 100px;">
                        <h4>{{topVendor.name}}</h4>
                        <div style="position: absolute; width: 100%; height: 50px; bottom: 10px; text-align: center">
                            <p>[ Vendor of the day ]</p>
                        </div>
                    </div>
                </div>{{/link-to}}
            </div>
            <div class="overview-padding">
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="pear-profile-card guide-xs-card overview-block" style="z-index: 2;">
                    <div class="overview-sm-block" style="background-image: url(../assets/images/overview1.jpg)">
                        <div class="overlay-pink">

                        </div>
                    </div>
                    <div class="overview-white-text">
                        {{#guest-counter session.currentUser.providerData.0.uid}}{{/guest-counter}}
                        <p style="padding-top: 20px;">Attending</p>
                        <p style="font-size: 60px; font-weight: 600;">{{model.guestsAttending}}</p>
                        <p style="padding-top: 20px;">Invited</p>
                        <p style="font-size: 60px; font-weight: 600;">{{model.guestsTotal}}</p>

                        <div class="overview-box-bottom" style="text-align: center !important; padding-top: 60px;">
                            {{#link-to 'index.mywedding.guests'}}{{mdl-button text="Guest List"}}{{/link-to}}                      
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="pear-profile-card guide-xs-card overview-block" style="z-index: 2;">
                    <div class="overview-action-add">
                        {{mdl-button icon="add_circle" action="openBudget" disabled=true}}
                    </div>
                    <div class="overview-md-block">
                        <h5>Budget</h5>
                        <div style="padding-top: 5px;">
                            {{#if refresh}}
                                {{#ember-pie session.currentUser.providerData.0.uid}} {{/ember-pie}}
                            {{/if}}
                        </div>
                        <div style="padding-top: 10px;">
                            <div style="width:50%; float: left; padding-left: 25px;">
                                <p>Used:
                                <br><span class="r-bold">Total:</span></p>
                            </div>
                            <div style="width:50%; float: right;">
                                <p>R {{model.budgetUsed}}
                                <br><span class="r-bold">R {{model.budgetTotal}}</span></p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5 col-sm-6" style="z-index: 2;">
                <div class="pear-profile-card guide-xs-card overview-block todo-widget">
                    {{!-- <div class="overlay-gray">

                    </div> --}}
                    {{!-- <div class="overlay-coming-soon">
                        <p>Coming Soon</p>
                    </div> --}}
                    <div class="overview-action-add">
                       {{#link-to 'index.mywedding.todo'}}{{mdl-button icon="add_circle"}}{{/link-to}}
                    </div>
                    <div class="overview-md-block">
                        <h5>To-Do List</h5>

                        <hr style="margin-top: 20px; margin-bottom: 0px;">

                        {{#each model.tasks as |task|}}
                            <div class="todo-item">
                                <div class="todo-left-sm">
                                    <div {{action "checkBox" task.id}} class="tb-btn">
                                      {{#if task.completed}}
                                        {{mdl-button icon="check_box"}}
                                      {{else}}
                                        {{mdl-button icon="check_box_outline_blank"}}
                                      {{/if}}
                                    </div>
                                </div>
                                <div class="todo-middle">
                                    <strong>{{task.title}}</strong>
                                </div>
                                <div class="todo-right">
                                    <div {{action "editTask" task.id}} class="tb-btn">
                                        {{mdl-button icon="create"}}
                                    </div>
                                    <div {{action "destroyTask" task.id}} class="tb-btn">
                                        {{mdl-button icon="delete"}}
                                    </div>
                                </div>
                            </div>
                            <hr style="margin-top: 0px; margin-bottom: 0px;">
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        
