			{{!-- <label class="col-sm-3 control-label"></label> --}}
			<div class="col-sm-6 col-sm-offset-3">
				{{#paper-select placeholder="Select a category" model=category}}
				  {{#each model as |cat|}}
				    {{#paper-option value=cat.id}}
				      {{cat.name}}
				    {{/paper-option}}
				  {{/each}}
				{{/paper-select}}
			</div>
		</div>
