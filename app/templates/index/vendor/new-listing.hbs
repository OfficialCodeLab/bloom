
<h1 class="font-times-header" style="color: #4C4C4E;">New Service</h1><br>
<hr>

<div style="padding-bottom:100px;">
	<div class="container">
		<div class="row">
	        <div class="pear-profile-card card-sm unselectable">
	        	{{#if section1}}
		        	<div class="header-bg-block">
		        		<h4>Details</h4>
		        	</div>
		        	<div class="vendor-service-inner">
						{{mdl-textfield label='Name of new item' value=name}}

						{{#paper-select placeholder="Select a category" model=category}}
						  {{#each model as |cat|}}
						    {{#paper-option value=cat.id}}
						      {{cat.name}}
						    {{/paper-option}}
						  {{/each}}
						{{/paper-select}}
						

						{{mdl-textarea label='Your product description.' value=desc}}

						<hr>


			        	<div style="text-align: left">
							<strong>Willing to travel?</strong><br>
				            <div>
								{{#paper-radio value="1" selected=willingToTravel}}Yes{{/paper-radio}}
								{{#paper-radio value="2" selected=willingToTravel}}No{{/paper-radio}}
								{{#paper-radio value="3" selected=willingToTravel}}N/A{{/paper-radio}}
	                        </div>
                        {{!-- {{#if willTravel}} --}}
                        <div><strong>Maximum Distance:</strong><br><br>
                        	<div layout style="cursor: pointer;">
						      <div flex="10" layout layout-align="center center">
						        <span>Km:</span>
						      </div>
						      {{paper-slider flex=true discrete=true value=maxDist step='1' min='1' max='1000'}}
						    </div>
							{{!-- <i class="fa fa-plane i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Maximum Distance' value=maxDist}} --}}
                        </div>
	                    </div>
                        {{!-- {{/if}} --}}
			        		

					    <div style="padding: 20px 0 40px 0;">

						    {{#link-to 'index.vendor.profile'}}{{#mdl-button isRaised=true isAccent=true}}Cancel{{/mdl-button}}{{/link-to}}
					        {{#mdl-button isRaised=true action="nextSection"}}Next{{/mdl-button}}
						</div>
		        	</div>
				{{else}}
	        		{{#if section2}}
				    	<div class="header-bg-block">
			        		<h4>Pricing</h4>
		        		</div>
			        	<div class="vendor-service-inner">

			        	<div style="text-align: left">
							<strong>Pricing Option</strong><br>
				            <div>
								{{#paper-radio value="1" selected=pricingOption}}Fixed Price{{/paper-radio}}
								{{#paper-radio value="2" selected=pricingOption}}Range{{/paper-radio}}
								{{#paper-radio value="3" selected=pricingOption}}No Price Information{{/paper-radio}}
                        </div>
                        </div>


							{{mdl-textfield label='Price of item (ZAR)' value=price}}				        		

						    <div style="padding: 20px 0 40px 0;">

							    {{#mdl-button isRaised=true isAccent=true action="prevSection"}}Back{{/mdl-button}}
						        {{#mdl-button isRaised=true action="nextSection"}}Next{{/mdl-button}}
							</div>
	        			</div>
					{{else}}
				    	<div class="header-bg-block">
			        		<h4>Images</h4>
			        	</div>
			        	<div class="vendor-service-inner">
			        	<img id='output' height='200' width='200' hidden={{shouldHideImage}}>
			        		<p> Listing main image* </p>
							{{#drop-zone
						      addRemoveLinks=true
						      onAddedFile=storeMainImage
						      keepLocal=true
						      onRemovedFile=removedMainImage
						      acceptedFiles='.jpg,.png'
						      maxFiles='1'
						      as |register|
						    }}
						      {{#default-message register=register}}
						        <span class="fa fa-files-o"></span><br>
						        Drop Files Here to Upload
						      {{/default-message}}
						      {{#invalid-file-type register=register}}
						        Invalid File Type! We only accept mp4, pdf, and xml files
						      {{/invalid-file-type}}
						    {{/drop-zone}}
								{{!-- {{#mdl-button action='openFilePicker' disabled=isCreating isRaised=true isAccent=true}}Upload Files <i class="fa fa-upload"></i>{{/mdl-button}} --}}
								{{!-- <button class="btn btn-default" disabled={{isCreating}} style="width:100%" {{action 'openFilePicker'}}>Upload Files <i class="fa fa-upload"></i></button> --}}

							<br><hr>
			        		<p> Additional images </p>
							{{#drop-zone
						      addRemoveLinks=true
						      onAddedFile=addedFile
						      onRemovedFile=removedFile
						      acceptedFiles='.jpg,.png'
						      maxFiles='3'
						      as |register|
						    }}
						      {{#default-message register=register}}
						        <span class="fa fa-files-o"></span><br>
						        Drop Files Here to Upload
						      {{/default-message}}
						      {{#invalid-file-type register=register}}
						        Invalid File Type! We only accept mp4, pdf, and xml files
						      {{/invalid-file-type}}
						    {{/drop-zone}}		        		

						    <div style="padding: 20px 0 40px 0;">

							    {{#mdl-button isRaised=true isAccent=true action="prevSection"}}Back{{/mdl-button}}
						        {{#mdl-button isRaised=true action="uploadAllFiles"}}Create Service{{/mdl-button}}
									{{!-- {{#mdl-button action='createItem' disabled=isNotValid isRaised=true isAccent=true}}Create new item {{#if isCreating}}<i class="fa fa-spinner fa-spin"></i>{{/if}}{{/mdl-button}} --}}
							</div>
			        	</div>
					{{/if}}
			    {{/if}}
			</div>
		</div>
	</div>
</div>
