<h1 class="font-times-header" style="color: #4C4C4E;">Your Services</h1>
<br>
<hr>
<div style="text-align:center" id="vendorListings">
   {{#if model.catItems}}
   <div class="text-center hideOnPhones">
      <div id="masonry-items">
         {{#masonry-grid items=model.catItems isFitWidth=true columnWidth=360 storeMasonryRef="storeMasonryRef" gutter=8 as |cat-item|}}
         <div>
            <div class="category-block">
               <span class="cat-title">{{cat-item.name}}</span>
               {{#link-to 'index.vendor.services.item' cat-item.id tagname='div' class="text-center cat-img-container"}}

               <div class="img-backdrop-m"  style="background-image: url({{cat-item.vendor.brandImage}});">
                 {{#image-component loadedImg="loadedImg" src=cat-item.imageURL class="img-responsive cat-image"}}{{/image-component}}
               </div>
               {{/link-to}}
               <div class="cat-overlay-2">
               </div>
               <div class="cat-bottom-box">
                  <div class="cat-bot-box-l col-xs-6">
                  {{#link-to 'category' cat-item.category.id class="cat-category" tagName="span"}}{{cat-item.category.name}}{{/link-to}}
                  </div>

                  <div class="cat-bot-box-r col-xs-6">
                     <div class="cat-location">
                     {{#if cat-item.willingToTravel}}
                        {{#if cat-item.maxTravelDist}} {{!-- YES --}}
                           <div class="cat-i-div">
                              <i class="fa fa-plane cat-travel-i" aria-hidden="true"></i>&nbsp;&nbsp;
                              {{tooltip-on-element side="bottom" text="Vendor is willing to travel"}}
                           </div>
                           {{#if cat-item.city}}
                              {{cat-item.city}}, {{cat-item.provinceCode}}
                           {{else}}
                              {{cat-item.province.name}}
                           {{/if}}

                        {{else}} {{!-- ONLINE --}}
                           <div class="cat-i-div">
                              <i class="fa fa-shopping-basket cat-travel-i" aria-hidden="true"></i>&nbsp;&nbsp;
                              {{tooltip-on-element side="bottom" text="Online Business"}}
                           </div>
                        {{/if}}
                     {{else}} {{!-- NO --}}
                        {{#if cat-item.city}}
                           {{cat-item.city}}, {{cat-item.provinceCode}}
                        {{else}}
                           {{cat-item.province.name}}
                        {{/if}}
                     {{/if}}
                     </div>
                  </div>
               </div>
            </div>
         </div>
         {{/masonry-grid}}
      </div>
      {{#if model.catItems}}
      <div id="loading-spinner">
         <br>
         {{mdl-progress progress=percentLoaded}}
      </div>
      {{/if}}
   </div>
   <div class="container-fluid text-center showOnPhones">
      {{#each model.catItems as |cat-item|}}
      <div style="display: inline-block;">
         <div class="category-block">
            <span class="cat-title">{{cat-item.name}}</span>
            {{#link-to 'index.vendor.services.item' cat-item.id tagname='div' class="text-center cat-img-container"}}
            <img src="{{cat-item.imageURL}}" class="img-responsive mobile-image">
            {{/link-to}}
            <div class="cat-overlay-2">
            </div>
            <div class="cat-bottom-box">
                  <div class="cat-bot-box-l col-xs-6">
                  {{#link-to 'category' cat-item.category.id class="cat-category" tagName="span"}}{{cat-item.category.name}}{{/link-to}}
                  </div>

                  <div class="cat-bot-box-r col-xs-6">
                     <div class="cat-location">
                     {{#if cat-item.willingToTravel}}
                        {{#if cat-item.maxTravelDist}} {{!-- YES --}}
                           <div class="cat-i-div">
                              <i class="fa fa-plane cat-travel-i" aria-hidden="true"></i>&nbsp;&nbsp;
                              {{tooltip-on-element side="bottom" text="Vendor is willing to travel"}}
                           </div>
                           {{#if cat-item.city}}
                              {{cat-item.city}}, {{cat-item.provinceCode}}
                           {{else}}
                              {{cat-item.province.name}}
                           {{/if}}

                        {{else}} {{!-- ONLINE --}}
                           <div class="cat-i-div">
                              <i class="fa fa-shopping-basket cat-travel-i" aria-hidden="true"></i>&nbsp;&nbsp;
                              {{tooltip-on-element side="bottom" text="Online Business"}}
                           </div>
                        {{/if}}
                     {{else}} {{!-- NO --}}
                        {{#if cat-item.city}}
                           {{cat-item.city}}, {{cat-item.provinceCode}}
                        {{else}}
                           {{cat-item.province.name}}
                        {{/if}}
                     {{/if}}
                     </div>
                  </div>
            </div>
         </div>
      </div>
      {{/each}}
   </div>
   {{else}}
   <div class="text-center">
      <p>It looks like you don't have any services yet!</p>
      <p>Click here to create a listing</p>
      {{mdl-button isRaised=true text='ADD SERVICE' action="openAutoListing"}}
   </div>
   {{/if}}
</div>
{{#tour-vendor currentUser.uid}} {{/tour-vendor}}
