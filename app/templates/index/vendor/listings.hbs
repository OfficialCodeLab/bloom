<div style="text-align:center">
	<div style="text-align:center">
		<div class="row">
		    {{#masonry-grid items=model.catItems isFitWidth=true columnWidth=360 storeMasonryRef="storeMasonryRef" gutter=8 as |cat-item|}}
				<div>
					<div class="category-block vendor-block">
						<h2>{{cat-item.name}}</h2>
						{{#link-to 'index.vendor.products.item' cat-item.id tagname='div' class="text-center cat-img-container"}}
							{{#image-component loadedImg="loadedImg" src=cat-item.imageURL class="img-responsive cat-image"}}{{/image-component}}
						{{/link-to}}
							<label style="margin-top:10px;">R {{cat-item.price}}</label>
					</div>
				</div>
			{{/masonry-grid}} 	
		</div>
	</div>



	<div class="row text-center showOnPhones">
	    {{#each model.catItems as |cat-item|}}
		<div class="col-lg-4 col-md-6">
			<div class="category-block-mobile vendor-block">
				<div class="mobile-overlay-1">
					<h2>{{cat-item.name}}</h2>
				</div>
				{{#link-to 'index.vendor.products.item' cat-item.id tagname='div' class="text-center cat-img-container"}}
					<img src="{{cat-item.imageURL}}" class="img-responsive cat-image">
				{{/link-to}}
				<label style="margin-top:10px;">R {{cat-item.price}}</label>
			</div>
		</div>
	    {{/each}}
	</div>
</div>

