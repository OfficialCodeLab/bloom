
<h1 class="font-times-header" style="color: #4C4C4E;">Log In</h1><br>
<hr>

{{#if model.vendorAccount}}
<div class="container">  
    <br>       
    {{mdl-spinner}}
</div>

{{else}}
<div class="container">
    <div class="form-horizontal">
        <div class="form-group has-feedback">
            <div class="col-sm-6 col-sm-offset-3">
            <i class="fa fa-envelope-o i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Email' value=email}}<br>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-sm-6 col-sm-offset-3">
                <i class="fa fa-asterisk i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Password' type="password" value=password}}<br>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                {{#mdl-button isRaised=true action="login"}}Confirm{{/mdl-button}}
            </div>
        </div>
    </div>
</div>
{{/if}}