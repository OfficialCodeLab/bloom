
<h1 class="font-times-header" style="color: #4C4C4E;">LOG IN</h1><br>
<hr>

{{#if model.vendorAccount}}
<div class="container">
    <h1>Logging you in <i class="fa fa-spinner fa-spin"></i></h1>
</div>

{{else}}
<div class="container">
    <h1>Log In:</h1>

    <div class="form-horizontal">
        <div class="form-group has-feedback">
            <label class="col-sm-3 control-label">Email</label>
            <div class="col-sm-6">
              {{input type="email" value=email class="form-control" placeholder="Your Email"}}
            </div>
        </div>
        <div class="form-group has-feedback">
            <label class="col-sm-3 control-label">Password</label>
            <div class="col-sm-6">
              {{input type="password" value=password class="form-control" placeholder="Your Password"}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <button type="submit" style="width:100%" class="btn btn-success" {{action 'login'}}>Confirm</button>
            </div>
        </div>
    </div>
</div>
{{/if}}