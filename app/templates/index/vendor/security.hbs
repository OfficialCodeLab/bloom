
<h1 class="font-times-header" style="color: #4C4C4E;">Security</h1>
<p>These settings are for your vendor account <strong>only</strong>, your personal settings can be changed at {{#link-to 'myaccount.security'}}MY ACCOUNT{{/link-to}}</p>
<hr>

<div style="text-align:center">
	{{!-- {{partial 'partials/security/change-email'}} --}}

	{{#if showPartial}}
		{{#if showPasswordPartial}}
			{{partial 'partials/security/change-password'}}
		{{/if}}
		{{#if showEmailPartial}}
			{{partial 'partials/security/change-email'}}
		{{/if}}
		{{#mdl-button isRaised=true action="backBtn" isAccent=true}}Cancel{{/mdl-button}}
		{{!-- <button class="btn btn-default" style="width:150px;" {{action 'backBtn'}}>Back</button> --}}
	{{else}}
	<div class="form-horizontal">
		<div class="form-group">
	        <div class="col-sm-offset-4 col-sm-4">
				{{#mdl-button isRaised=true action="showPasswordChangePartial" isAccent=true}}Change Password{{/mdl-button}}
				{{!-- <button class="btn btn-default" style="width:150px;" {{action 'showPasswordChangePartial'}}>Change Password</button> --}}
	        </div>
	    </div>
	    <div class="form-group">
	        <div class="col-sm-offset-4 col-sm-4">
				{{#mdl-button isRaised=true action="showEmailChangePartial" isAccent=true}}Change Email{{/mdl-button}}
				{{!-- <button class="btn btn-default" style="width:150px;" {{action 'showEmailChangePartial'}}>Change Email</button> --}}
	        </div>
	    </div>
	    <div class="form-group">
	        <div class="col-sm-offset-4 col-sm-4">
						{{#if isSpecial}}
							{{#mdl-button isRaised=true action="lockAccount" isAccent=true}}Lock Account{{/mdl-button}}
						{{else}}
							{{#mdl-button isRaised=true action="unlockAccount" isAccent=true}}Unlock Account{{/mdl-button}}
						{{/if}}
				{{!-- <button class="btn btn-default" style="width:150px;" {{action 'logout'}}>Log out</button> --}}
	        </div>
	    </div>
	    <div class="form-group">
	        <div class="col-sm-offset-4 col-sm-4">
				{{#mdl-button isRaised=true action="logout" isAccent=true}}Log out{{/mdl-button}}
				{{!-- <button class="btn btn-default" style="width:150px;" {{action 'logout'}}>Log out</button> --}}
	        </div>
	    </div>
    </div>
    {{/if}}

</div>
