</div>
<div class="row text-center full-width-boxes">
	<div class="col-lg-12">
		<h1>{{model.catItem.name}}</h1>
		<div class="single-img-container">
			<img src={{model.catItem.imageURL}} class="img-responsive">
		</div>
	</div>
	<div class="col-lg-12" style="padding-bottom: 100px">

		<div class="form-horizontal">
			<h3>Update Details</h3>
			<div class="form-group has-feedback">
			{{!-- <label class="col-sm-3 control-label">Name</label> --}}
			<div class="col-sm-6 col-sm-offset-3">
				{{mdl-textfield disabled=model.catItem.updating label='Name of item' value=model.catItem.name}}
				{{!-- {{input type="text" disabled=model.catItem.updating value=model.catItem.name class="form-control" placeholder="Name of new item"}} --}}
			</div>
		</div>
			<div class="form-group has-feedback">
				{{!-- <label class="col-sm-3 control-label">Description</label> --}}
				<div class="col-sm-6 col-sm-offset-3">
					{{mdl-textarea disabled=model.catItem.updating label='Your product description' value=model.catItem.desc}}
		        		{{!-- {{textarea class="form-control" disabled=model.catItem.updating value=model.catItem.desc placeholder="Your product description. (At least 5 characters.)" rows="7"}} --}}
	        	</div>
			</div>
			<div class="form-group has-feedback" style="text-align: left;">
			{{!-- <label class="col-sm-3 control-label"></label> --}}
			<div class="col-sm-6 col-sm-offset-3">
				{{#paper-select placeholder="Category" model=category}}
				  {{#each model.category as |cat|}}
				    {{#paper-option value=cat.id}}
				      {{cat.name}}
				    {{/paper-option}}
				  {{/each}}
				{{/paper-select}}
				</div>
			</div>
			{{!-- <div class="form-group has-feedback">
				<label class="col-sm-3 control-label">Category</label>
