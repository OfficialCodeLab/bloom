					    {{input type="text" disabled=model.catItem.updating value=model.catItem.price class="form-control" placeholder="Eg: 500 or 450.23"}}
					  </div>
					</div> --}}
				</div>
			</div>			
			<div class="form-group has-feedback">
				<div class="col-sm-6 col-sm-offset-3">
				{{#mdl-button isRaised=true disabled=model.catItem.updating action="openFilePicker" isAccent=true}}Upload Files <i class="fa fa-upload"></i>{{/mdl-button}}
				</div>
			</div>
			<div class="form-group has-feedback">
				<div class="col-sm-6 col-sm-offset-3">
				{{mdl-textfield disabled=model.catItem.updating label='Image Url' value=model.catItem.imageURL}}
					{{!-- <div class="has-feedback {{if model.catItem.imageURL 'has-success'}}">
