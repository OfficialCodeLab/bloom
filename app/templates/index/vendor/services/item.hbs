					  {{/each}}
					</select>
				</div>
			</div> --}}
			<div class="form-group has-feedback">
				<div class="col-sm-6 col-sm-offset-3">
					{{mdl-textfield disabled=model.catItem.updating label='Price of item (ZAR)' value=model.catItem.price}}	
					{{!-- <div class="has-feedback {{if model.catItem.isValidNumber 'has-success'}}">
