
<h1 class="font-times-header" style="color: #4C4C4E;">Profile Settings</h1><br>
<hr>

<div style="text-align:center">
    <h3>{{model.name}}</h3>
    <div class="row">
        <div class="form-horizontal form-padding-bottom" style="padding-top: 20px;">
            <i class="fa fa-envelope-o i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Email Address' disabled="true" value=model.email}}
            <i class="fa fa-newspaper-o i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Description' value=model.desc}}<br>
            <i class="fa fa-phone i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Contact number' value=model.cell}}
            <i class="fa fa-map-marker i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Physical Address' value=model.addressL1}}<br>
            <i class="fa fa-home i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='City' value=model.city}}
            <i class="fa fa-map-o i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Postal Code' value=model.postalcode}}<br>
        </div>
    </div>
    <div class="row"> 
        {{#mdl-button isRaised=true disabled=isUpdating action="saveChanges"}}Update {{#if isUpdating}}<i class="fa fa-spinner fa-spin"></i>{{/if}}{{/mdl-button}}
    </div>
</div>