<div style="text-align:left;">
	{{#link-to 'index.vendor'}}<button class="btn btn-default">Back</button>{{/link-to}}
</div>
<div class="row text-center">
	<div class="col-lg-12">
		<h1>{{model.catItem.name}}</h1>
		<div class="single-img-container">
			<img src={{model.catItem.imageURL}} class="img-responsive">
		</div>
	</div>
	<div class="col-lg-12" style="padding-bottom: 100px">

		<div class="form-horizontal">
			<h1>Update Details</h1>
			<div class="form-group has-feedback">
			<label class="col-sm-3 control-label">Name</label>
			<div class="col-sm-6 {{if model.catItem.isLongName 'has-success'}}">
				{{input type="text" disabled=model.catItem.updating value=model.catItem.name class="form-control" placeholder="Name of new item"}}
			</div>
		</div>
			<div class="form-group has-feedback">
				<label class="col-sm-3 control-label">Description</label>
				<div class="col-sm-6 {{if model.catItem.isLongDesc 'has-success'}}">
		        		{{textarea class="form-control" disabled=model.catItem.updating value=model.catItem.desc placeholder="Your product description. (At least 5 characters.)" rows="7"}}
	        	</div>
			</div>
			<div class="form-group has-feedback">
				<label class="col-sm-3 control-label">Category</label>
				<div class="col-sm-6 {{if category 'has-success'}}">
					<select disabled={{model.catItem.updating}} onchange={{action "selectCat" value="target.value"}} class="form-control">
						<option value={{model.catItem.category.id}} selected="selected">{{model.catItem.category.name}}</option>
						<option style="text-align:center;" disabled>────────────────────</option>
					  {{#each model.category as |cat|}}
					    <option value={{cat.id}}>{{cat.name}}</option>
					  {{/each}}
					</select>
				</div>
			</div>
			<div class="form-group has-feedback">
				<label class="col-sm-3 control-label">Price</label>
				<div class="col-sm-6">
					<div class="has-feedback {{if model.catItem.isValidNumber 'has-success'}}">
					  <div class="input-group">
					    <span class="input-group-addon">R</span>
					    {{input type="text" disabled=model.catItem.updating value=model.catItem.price class="form-control" placeholder="Eg: 500 or 450.23"}}
					  </div>
					</div>
				</div>
			</div>			
			<div class="form-group has-feedback">
				<label class="col-sm-3 control-label">Upload Image</label>
				<div class="col-sm-6">
					<button class="btn btn-default" disabled={{model.catItem.updating}} style="width:100%" {{action 'openFilePicker'}}>Upload Files <i class="fa fa-upload"></i></button>
				</div>
			</div>
			<div class="form-group has-feedback">
				<label class="col-sm-3 control-label">Image URL</label>
				<div class="col-sm-6">
					<div class="has-feedback {{if model.catItem.imageURL 'has-success'}}">
					  <div class="input-group">
					    <span class="input-group-addon">http://</span>
					    {{input type="text" disabled=model.catItem.updating value=model.catItem.imageURL class="form-control" placeholder="Eg: imgur/image.jpg"}}
					  </div>
					</div>
				</div>
			</div>
			<div class="col-sm-offset-3 col-sm-6">
				<button class="btn btn-success-thin" style="width:100%;" disabled={{model.catItem.isNotValid}} {{action 'updateItem' model.catItem}}>
					<span>
						Update Product Listing {{#if model.catItem.isUpdating}}<i class="fa fa-spinner fa-spin"></i>{{/if}}
					</span>
				</button>
			</div><br><br>
			<div class="col-sm-offset-3 col-sm-6">
				<button class="btn btn-danger-thin" style="width:100%;" disabled={{model.catItem.updating}} {{action 'destroyItem' model.catItem}}>
					<span>
						Remove Product Listing {{#if model.catItem.isDeleting}}<i class="fa fa-spinner fa-spin"></i>{{/if}}
					</span>
				</button>
			</div>
		</div>
	</div>
</div>