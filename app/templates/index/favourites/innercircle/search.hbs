<div class="container-fluid" style="padding: 0px 10px 60px 10px; text-align: center;">
	<div class="form-horizontal row">
		<div class="form-group has-feedback">
			<div class="col-sm-6 col-sm-offset-3" style="padding-top:5px">
				{{mdl-button icon="arrow_back" action="backBtn" disabled=isDisabled}}
				{{mdl-textfield disabled=searching label='Name to search for' value=name}}
				{{mdl-button icon="search" action="searchUser" disabled=searching}}
				{{!-- {{input type="text" disabled=searching value=name class="form-control" placeholder="Name to search for"}} --}}
			</div>
			{{!-- <div class="col-sm-3" style="padding-top:5px">
				<button class="btn btn-default" style="width:100%" disabled={{isNotValid}} {{action 'searchUser'}}>Go{{#if searching}}<i class="fa fa-spinner fa-spin"></i>{{/if}}</button>
			</div> --}}
		</div>
	</div>
	{{#if searching}}
	<div class="row text-center">
		<div class="form-group">
    		{{mdl-spinner}}
			{{!-- {{#mdl-button isRaised=true isAccent=true action="backBtn"}}Cancel{{/mdl-button}}&nbsp; --}}
		</div>
		{{!-- <div class="form-group" style="padding-top: 5px;">
			{{#mdl-button isRaised=true action="searchUser" disabled=isDisabled}}Search {{#if searching}}<i class="fa fa-spinner fa-spin"></i>{{/if}}{{/mdl-button}}
		</div> --}}
	</div>
	{{/if}}
	{{#if responseMessage}}
		<div class="row text-center">
		    <div class="col-sm-offset-2 col-sm-8 alert alert-warning" {{action 'closeMessage'}}>{{responseMessage}}
		    <p class="tiny-text">Tap this message to close it</p></div>
	    </div>
	{{/if}}
	{{#if searchResults}}
		<div id="searchRes" class="row">
			<h3>Search Results</h3>
			{{#mdl-table content=searchResults as |user|}}
		      {{#mdl-table-col label='Full Name'}}
		        {{user.name}}
		      {{/mdl-table-col}}
		      {{#mdl-table-col label='Send Request'}}
		      	<div {{action "addInnerCircle" user}} class="text-center">
		      		{{#if user.adding}}
		      			<div style="padding-top: 10px;">
		      				{{mdl-spinner}}
		      			</div>
		      		{{else}}
						{{mdl-button icon="person_add" disabled=user.adding}}
		      		{{/if}}

		      	</div>
		        {{!-- <button class="btn btn-success" disabled={{user.adding}} {{action "addInnerCircle" user}}>Add{{#if user.adding}}<i class="fa fa-spinner fa-spin"></i>{{/if}}</button>  --}}
		      {{/mdl-table-col}}
		    {{/mdl-table}}
		</div>
	{{/if}}
		{{!-- <table class="table table-bordered table-striped">
		    <thead style="text-align: center;">
		      <tr>
		          <th>Full Name</th>
		          <th>Send Request</th>
		      </tr>
		    </thead>
		    <tbody>
		    {{#each searchResults as |user|}}
		        <tr>
		            <td>{{user.name}}</td>           
		            <td>
		            	<button class="btn btn-success" disabled={{user.adding}} {{action "addInnerCircle" user}}>Add{{#if user.adding}}<i class="fa fa-spinner fa-spin"></i>{{/if}}</button> 
							{{#if user.response}}
					    		<div class="alert alert-success text-center" style="display:inline-block; margin-bottom:0px; padding: 8px; " {{action 'closeMessageAdded' user}}>{{user.response}}</div>
						{{/if}}
					</td>
		        </tr>
		    {{/each}}

		    </tbody>
		</table> --}}

</div>