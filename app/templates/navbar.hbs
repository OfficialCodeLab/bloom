            {{#nav-link-to 'listings'}}All Listings{{/nav-link-to}}
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{!-- {{#nav-link-to 'admin'}}Admin{{/nav-link-to}} --}}
        {{#nav-link-to 'myaccount'}}MY ACCOUNT{{/nav-link-to}}
        <li><a href="#" {{action 'logout'}}>LOGOUT</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div id="menu-overlay" style="display:none">
  <div id="menu-items">
  {{!-- TODO: IF THE USER IS ON LOG IN PAGE, DO NOT SHOW OPEN --}}
    {{#if session.isAuthenticated}}
    <ul>
      {{#link-to 'index'}}<h2>Hub</h2>{{/link-to}}
      {{#link-to 'about'}}<h2>About</h2>{{/link-to}}
      {{#link-to 'categories'}}<h2>Categories</h2>{{/link-to}}
      {{#link-to 'myaccount'}}<h2>Account</h2>{{/link-to}}
      <a {{action 'logout'}} href="#"><h2>Logout</h2></a>
    </ul>
    {{else}}
    <h1>You need to log in to continue</h1>
      {{#link-to 'login'}}
        <button class="clbutton-main">Log in</button>
      {{/link-to}}
    {{/if}}
  </div>
</div>