            {{#nav-link-to 'category' 'culinary'}}Culinary{{/nav-link-to}}
            {{#nav-link-to 'category' 'decor'}}Decor{{/nav-link-to}}
            {{#nav-link-to 'category' 'dresses'}}Dresses{{/nav-link-to}}
            {{#nav-link-to 'category' 'entertainment'}}Entertainment{{/nav-link-to}}
