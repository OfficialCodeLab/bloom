      <ul class="nav navbar-nav">
        {{#nav-link-to 'index'}}HUB{{/nav-link-to}}
        {{#nav-link-to 'about'}}ABOUT{{/nav-link-to}}
        
        
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" {{action "navigateCat"}}>CATEGORIES <b class="caret"></b></a>
