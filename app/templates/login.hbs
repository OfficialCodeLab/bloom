<main id="panel" style="margin-top: -50px !important; OVERFLOW-x: hidden;">
	
	<div class="fullscreen" id="section1">
		<div id="section1-bg" class="fullscreen">
		</div>
		<div class="fullscreen-overlay">
		</div>
		<div class="fullscreen" id="section2" style="display:none;">
			<div class="top-right-box">
				<a id="close-sec2"><i class="fa fa-times-circle-o close-popup"></i></a>
			</div>
			<div id="s2-overlay1">
				<h1 style="text-align:center; color:#fff">Please Sign in to Continue</h1>
				<div class="login-buttons">
					<button type="button" class="btn btn-default clbutton-main">LOGIN</button>
					<div class="cl-spacing" style="display: inline-block; min-width: 5%;"></div>
					<button type="button" class="btn btn-default clbutton-main">SIGN UP</button>
				</div>
			</div>
		</div>
