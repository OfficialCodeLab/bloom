<div class="container text-center index-main">
  <h1 class="text-center font-times-header">FRIENDS</h1>
  <p class="font-times-subheader text-center">View your friends' weddings!</p>
  <div class="friends-container">
    <div class="row">
      {{#each model.friends as |friend|}}
        <div class="col-sm-4">
          <div class="card-pear card-3 friend-card">
            <div class="friend-profile-container">
              {{!--
                TODO: Add function for profile image of another user to be easily shown.
              --}}
              {{!-- <img src="" alt="Profile Image" class="friend-profile-image" /> --}}
            </div>
            <h3 class="font-times-header">{{friend.name}}&nbsp;{{friend.surname}}</h3>
            <button class="btn btn-default btn-pear" {{action "showWedding" friend.id}}>View Wedding</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
