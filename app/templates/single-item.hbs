<div class="index-main" id="single-item">
	<div class="pear-sub-well catitem-subnav hideOnPhones">
		<ul class="nav nav-pills unselectable pear-sidebar">
			<li><a id="#href-item-images" href {{action 'scrollTo' 'item-images'}}>IMAGES</a></li>
			<li><a id="#href-item-description" href {{action 'scrollTo' 'item-description'}}>DESCRIPTION</a></li>
			<li><a id="#href-item-contact" href {{action 'scrollTo' 'item-contact'}}>CONTACT</a></li>
			<li><a id="#href-item-more" href {{action 'scrollTo' 'item-more'}}>MORE INFO</a></li>
		</ul>
	</div>
