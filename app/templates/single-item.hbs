		<div class="row text-center">
			<div class="col-lg-12 single-item-imageheader unselectable">
				<div class="single-img-container card-material guide-xs-card" id="item-images">
					<h4 class="single-item-title">{{model.name}}</h4>

					<div style="z-index: 5">
						{{#if img0}}
			        {{#lazy-image url=model.imageURL}}{{mdl-spinner}}{{/lazy-image}}
		        {{else}}
		        	{{#if img1}}
		        		{{#lazy-image url=model.image0}}{{mdl-spinner}}{{/lazy-image}}
		        	{{else}}
			        	{{#if img2}}
			        		{{#lazy-image url=model.image1}}{{mdl-spinner}}{{/lazy-image}}
			        	{{else}}
				        	{{#if img3}}
				        		{{#lazy-image url=model.image2}}{{mdl-spinner}}{{/lazy-image}}
				        	{{else}}
				        		{{#if img4}}
				        			{{#lazy-image url=model.image3}}{{mdl-spinner}}{{/lazy-image}}
				        		{{else}}
				        			{{#if img5}}
				        				{{#lazy-image url=model.image4}}{{mdl-spinner}}{{/lazy-image}}
				        			{{/if}}
				        		{{/if}}
		        			{{/if}}
		        		{{/if}}
		        	{{/if}}
		        {{/if}}
	        </div>
				</div>
			</div>


			<div class="col-lg-12" style="padding-bottom: 50px;">
				<div style="padding-top: 20px;">
				<div style="text-align: center">
				{{#mdl-button isRaised=true isAccent=true action="imgPrev"}}Prev{{/mdl-button}}
				{{#mdl-button isRaised=true action="imgNext"}}Next{{/mdl-button}}
				</div>
					<div style="padding-top: 40px; padding-bottom: 40px;" id="item-description">
						{{!-- <h4 style="text-align: left; font-weight: 600;">Description</h4> --}}
						{{#if model.desc}}
						<p class="catitem-desc">{{model.desc}}</p>
						{{else}}
						<p class="catitem-desc">No Description</p>
						{{/if}}
						<br>

						<div class="row">
							<div class="catitem-cards">
								<div class="col-md-4 col-sm-6">
									{{#link-to 'vendor-profile' model.vendor.id}}<div class="card-material catitem-card-vendor" style="background-image: url({{if model.vendor.backgroundImage model.vendor.backgroundImage '../assets/images/sample-content/vendor-default.jpg' }});">
										<div class="catitem-card-overlay-black">
											<h4>{{model.vendor.name}}</h4>
											<p>
												Visit Vendor Profile
											</p>
										</div>
									</div>{{/link-to}}
								</div>
								<div class="col-md-4 col-sm-6" style="height: 390px;">
									<div class="card-material catitem-contact" {{action 'openContactModalInit'}}>
										<i class="material-icons">message</i>
										<p>
											Contact {{model.vendor.name}} right now with Bloom's direct messaging!
										</p>
										{{!-- <h4>Send a Message</h4> --}}

										<h6>Send A Message</h6>
									</div>
								</div>

								<div class="col-md-4 col-sm-6"  id="item-contact">
									<div class="card-material catitem-contact-info">
											<h5>Vendor Information</h5>
												<div style="padding-top: 10px;">
														<div class="col-xs-2 overview-info"><i class="material-icons">mail_outline</i></div>
														<div class="col-xs-10 overview-info">
															{{#if contactInfoVisible}}
															<a href="mailto:bloom+{{model.vendor.email}}?cc=support@bloomweddings.co.za" target="_top">{{model.vendor.email}}</a>
															{{else}}
																****
															{{/if}}
														</div>
														<div class="col-xs-2 overview-info"><i class="material-icons">call</i></div>
														<div class="col-xs-10 overview-info">
															{{#if contactInfoVisible}}
																{{model.vendor.cell}}
															{{else}}
																****
															{{/if}}

														</div>
														<div class="col-xs-2 overview-info"><i class="material-icons">laptop</i></div>
														<div class="col-xs-10 overview-info"><a href={{websiteUrl}} target="_blank" {{action 'websiteOpened' preventDefault=false}}>{{website}}</a></div>
														<div class="col-xs-2 overview-info"><i class="material-icons">home</i></div>
														<div class="col-xs-10 overview-info">{{model.vendor.city}}</div>
														<div class="col-xs-2 overview-info"><i class="material-icons">place</i></div>
														<div class="col-xs-10 overview-info">{{model.vendor.province.name}}</div>
												</div>
												<div class="overlay-box-bottom">
														<div style="padding: 5px;">{{mdl-button action='showContactInfo' isRaised=true text="Show Contact Info"}}</div>
											 </div>
								 </div>
							 </div>

								<div class="col-md-4 col-sm-6"  id="item-more">
									{{#link-to 'category' model.category.id}}<div class="card-material catitem-category" style={{model.category.style}}>
										<h4>Category</h4>
										<i class={{model.category.icon}}>{{model.category.iconName}}</i>
										<p class="cat-heading">{{model.category.name}}</p>
										<p class="cat-subtext-bottom">
											See more from this category
										</p>
									</div>{{/link-to}}
								</div>


									<div class="col-md-4 col-sm-6">
										<div class="card-material catitem-favs">
											<div class="favs-header">
												<p>
													Favourites
												</p>
											</div>
											<p style="padding-bottom: 20px; min-height:44px">
												{{peopleStr.content}}
											</p><hr /><p style="padding-top: 20px;">
												Add to your favourites
											</p>{{#favourite-button model.id currentUser.uid}}{{/favourite-button}}
										</div>
									</div>

									<div class="col-md-4 col-sm-6">
										<div class="card-material catitem-shop" style="background-image: url({{if notOnline '../assets/images/overview3.jpg' '../assets/images/online-bg.jpg' }});">
											<div class="catitem-fulloverlay">

												{{#if model.willingToTravel}}
													{{#if model.maxTravelDist}}
															<i class="material-icons">place</i>
															<div class="catitem-location">
																{{#if model.city}}
																<p>{{model.city}}, {{model.provinceCode}}</p>
																{{else}}
																<p>{{model.province.name}}</p>
																{{/if}}
																<div class="catitem-travel">
																	<p>
																		Vendor is willing to travel up to {{model.maxTravelDist}} km
																	</p>
																</div>
															</div>

													{{else}}
													<div class="cat-i-div">
														 <i class="fa fa-shopping-basket cat-travel-i" aria-hidden="true"></i>&nbsp;&nbsp;
														 {{tooltip-on-element side="left" text="Online Business"}}

 														<div class="catitem-location">
															<p>Online</p>
														</div>
													</div>
													{{/if}}
													{{else}}
													<i class="material-icons">place</i>
													<div class="catitem-location">
														<p>
															{{model.province.name}}
														</p>
													</div>
												{{/if}}

											</div>
										</div>
									</div>




							</div>
						</div>
