<div class="index-main" id="single-item">
	<div class="container">
		<div class="header-top">
			<h1 class="font-times-header"><i class={{model.category.icon}}>{{model.category.iconName}}</i>{{model.category.name}}</h1>
			<p class="font-times-subheader">{{model.category.desc}}</p>
			<hr>
		</div><br>
		<div class="row text-center">
			<div class="col-lg-12 single-item-imageheader unselectable">
				<div class="single-img-container card-material guide-xs-card">
					<h4 class="single-item-title">{{model.name}}</h4>

					<div style="z-index: 5">
						{{#if img0}}
			        {{#lazy-image url=model.imageURL}}{{mdl-spinner}}{{/lazy-image}}
		        {{else}}
		        	{{#if img1}}
		        		{{#lazy-image url=model.image0}}{{mdl-spinner}}{{/lazy-image}}
		        	{{else}}
			        	{{#if img2}}
			        		{{#lazy-image url=model.image1}}{{mdl-spinner}}{{/lazy-image}}
			        	{{else}}
				        	{{#if img3}}
				        		{{#lazy-image url=model.image2}}{{mdl-spinner}}{{/lazy-image}}
				        	{{else}}
				        		{{#if img4}}
				        			{{#lazy-image url=model.image3}}{{mdl-spinner}}{{/lazy-image}}
				        		{{else}}
				        			{{#if img5}}
				        				{{#lazy-image url=model.image4}}{{mdl-spinner}}{{/lazy-image}}
				        			{{/if}}
				        		{{/if}}
		        			{{/if}}
		        		{{/if}}
		        	{{/if}}
		        {{/if}}
	        </div>
				</div>
			</div>


			<div class="col-lg-12" style="padding-bottom: 50px;">
				<div style="padding-top: 20px;">
				<div style="text-align: center">
				{{#mdl-button isRaised=true isAccent=true action="imgPrev"}}Prev{{/mdl-button}}
				{{#mdl-button isRaised=true action="imgNext"}}Next{{/mdl-button}}
				</div>
					<div class="col-md-6 col-md-offset-3">
						<h4 style="text-align: left; font-weight: 600;">Description</h4>
						{{#if model.desc}}
						<p style="text-align: left">{{model.desc}}</p>
						{{else}}
						No Description
						{{/if}}
