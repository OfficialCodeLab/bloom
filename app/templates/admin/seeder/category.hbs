<h1 class="text-center">Category Seeder</h1>
<h4 class="text-center">Please note, there are no success messages, fields will clear on success</h4>
	<div class="form-horizontal">
		<div class="form-group has-feedback">
			<label class="col-sm-3 control-label">Category ID</label>
			<div class="col-sm-6">
				{{input type="text" value=catID class="form-control" placeholder="Url/query name of new category (no spaces)"}}
				{{!-- {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}} --}}
			</div>
		</div>
		<div class="form-group has-feedback">
			<label class="col-sm-3 control-label">Category Name</label>
			<div class="col-sm-6">
				{{input type="text" value=name class="form-control" placeholder="Display name of new category"}}
				{{!-- {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}} --}}
			</div>
		</div>
		<div class="form-group has-feedback">
			<label class="col-sm-3 control-label">Description</label>
			<div class="col-sm-6">
				{{input type="text" value=desc class="form-control disabled" placeholder="Description of category"}}
				{{!-- {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}} --}}
			</div>
		</div>		
		<div class="form-group has-feedback">
			<label class="col-sm-3 control-label">Image URL</label>
			<div class="col-sm-6">
				{{input type="text" value=imageURL class="form-control" placeholder="(../assets/images/categories/<image name.jpg>)"}}
				{{!-- {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}} --}}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-3">

		</div>
		<div class="col-sm-6">
			<button class="btn btn-default" {{action 'createItem'}}>Create new category</button>
		</div>
	</div>