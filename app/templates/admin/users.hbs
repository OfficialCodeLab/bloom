<div class="header-top"><h1>Users</h1></div>
 <table class="table table-bordered table-striped">
   <thead>
     <tr>
       <th>Name</th>
       <th {{action 'sortBy' 'email'}}>Email</th>
       <th>Facebook ID</th>
     </tr>
   </thead>
   <tbody>
      {{#each model as |user| }}
       <tr>
         <td>{{user.name}} {{user.surname}} </td>
         <td>{{user.email}}</td>
         <td><a href="http://facebook.com/{{user.id}}">{{user.id}}</a></td>
       </tr>
     {{/each}}
   </tbody>
 </table>