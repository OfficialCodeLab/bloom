<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>E-mail</th>
        <th>Accounts</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |user|}}
          {{#if user.vendorAccount}}
            {{#if showVendors}}
            <tr>
              <td>
                {{user.name}} {{user.surname}}
              </td>
              <td>
                {{user.email}}
              </td>
              <td>
                <div style="text-align: left">
                  <a href="https://console.firebase.google.com/project/pear-server/database/data/users/{{user.id}}">
                  <i style="font-size: 24px;" class="fa fa-database"></i>
              </a>&nbsp;&nbsp;
                    {{#link-to 'vendor-profile' user.vendorAccount.id}}<i style="font-size: 24px;" class="fa fa-truck"></i>{{/link-to}}
                </div>
              </td>
              <td>
                <div {{action "destroyUser" user.id}} class="tb-btn">{{mdl-button icon="delete"}}</div>
              </td>
            </tr>

            {{/if}}
          {{else}}
            {{#if showUsers}}
            <tr>
              <td>
                {{user.name}} {{user.surname}}
              </td>
              <td>
                {{user.email}}
              </td>
              <td>
                <div style="text-align: left">
                  <a href="https://console.firebase.google.com/project/pear-server/database/data/users/{{user.id}}">
                  <i style="font-size: 24px;" class="fa fa-database"></i>
              </a>&nbsp;&nbsp;
                    <a href='' {{action "notImplemented"}}><i style="font-size: 24px;" class="fa fa-diamond"></i></a>
                </div>
              </td>
              <td>
                <div {{action "destroyUser" user.id}} class="tb-btn">{{mdl-button icon="delete"}}</div>
              </td>
            </tr>
            {{/if}}
          {{/if}}
      {{/each}}
    </tbody>
  </table>

</div>
