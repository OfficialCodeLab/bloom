<div class="container">
<div class="header-top"><h1>Messages</h1></div>
{{#each model as |contact|}}
	<div class="col-md-4">
	    <div class="panel panel-default">
	        <div class="panel-heading">
	            <div class="delete-box">
	            	<button class="btn btn-danger btn-xs" {{action "deleteContact" contact}}>x</button>
	            </div> 
	            <h3 class="panel-title pnl-wrap">Message from: {{contact.email}}</h3>       
	        </div>
	        <div class="panel-body">
	            <p>{{contact.message}}</p>
	        </div>
	    </div>
    </div>
{{/each}}
</div>