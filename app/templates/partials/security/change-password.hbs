<h3>Change password</h3><br>

<div class="form-horizontal">
    <div class="form-group has-feedback">
        <div class="col-sm-6 col-sm-offset-3">
        {{mdl-textfield label='Your new password' value=password}}
          {{!-- {{input type="password" value=password class="form-control" placeholder="Your new password"}} --}}
        </div>
    </div>

    <div class="form-group has-feedback">
        <div class="col-sm-6 col-sm-offset-3">
        {{mdl-textfield label='Please confirm your new password' value=passwordConfirm}}
          {{!-- {{input type="password" value=passwordConfirm class="form-control" placeholder="Please confirm your new password"}} --}}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
            {{#mdl-button disabled=noPassword isRaised=true action="changePassword"}}Confirm{{/mdl-button}}
            {{!-- <button type="submit" style="width:150px;" disabled={{noPassword}} class="btn btn-success" {{action 'changePassword'}}>Confirm</button> --}}
        </div>
    </div>
</div>