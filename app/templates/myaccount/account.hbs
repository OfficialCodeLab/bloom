<div class="row">
	<div class="form-horizontal form-padding-bottom" style="padding-top: 20px;">
		<i class="fa fa-envelope-o i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Email Address' value=model.user.email disabled=isPasswordAccount}}
		<i class="fa fa-phone i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Contact number' value=model.user.cell}}<br>
		<i class="fa fa-map-marker i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Physical Address' value=model.user.addressL1}}
		<i class="fa fa-home i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='City' value=model.user.city}}<br>
		<i class="fa fa-map-o i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Postal Code' value=model.user.postalcode}}
		<i class="fa fa-globe i-lbl" aria-hidden="true"></i>&nbsp;&nbsp;{{mdl-textfield label='Country' value="South Africa" disabled=true}}<br>
    </div>
</div>
<div style="padding: 20px 0px 40px 0px;">
	{{mdl-button isRaised=true text='UPDATE' action="saveUser"}}
  	{{mdl-button isRaised=true text='MODAL' action="createIcon"}}
</div>
