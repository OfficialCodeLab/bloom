<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{title}}</h4>
      </div>
      <div class="modal-body">
        {{yield}}
      </div>
      <div class="modal-footer">
        {{#mdl-button isColored=false action="close"}}Close{{/mdl-button}}
        {{!-- <button type="button" class="btn btn-default">Close</button> --}}
        {{#mdl-button disabled=model.isDisabled action="ok"}}Ok{{/mdl-button}}
        {{!-- <button type="button" class="btn btn-success" disabled={{model.isDisabled}} {{action 'ok'}}>OK</button> --}}
      </div>
    </div>
  </div>
</div>