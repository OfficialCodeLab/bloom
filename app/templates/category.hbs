<div class="container index-main">
	<div class="header-top">
		<h1>{{model.name}}</h1><hr class="style-two"><h3>{{model.desc}}</h3>
	</div>
	<div class="row">
	    {{#each model.catItems as |cat-item|}}
		<div class="col-lg-4 col-md-6">
			<div class="category-block">
				<h2>{{cat-item.name}}</h2>
				{{#link-to 'single-item' cat-item.id tagname='div' class="text-center cat-img-container"}}
					<img src="{{cat-item.imageURL}}" class="img-responsive cat-image">
				{{/link-to}}
				<button type="button" class="btn btn-danger cat-heart-button" {{action 'addFavourite' cat-item.id}}><i class="fa fa-heart-o"></i></button>
			</div>
		</div>
	    {{/each}}
	</div>
</div>