<div class="container text-center messaging-content">
	<h1 class="text-center">Message Supplier</h1>

	<div class="form-horizontal form-group form-group-lg row">
		<div class="col-md-offset-2 col-md-8">
			<div>
				<!-- Vendor Name -->
				<div class="input-group">
					<span class="input-group-addon">Vendor</span> {{input type="text" value=model.text1 class="form-control" placeholder="Vendor Name" disabled="true"}}
				</div>
				<br>

				<!-- Email Address -->
				<div class="input-group">
					<span class="input-group-addon">@</span> {{input type="email" value=model.text2 class="form-control" placeholder="Your e-mail address."}}
				</div>


				<!-- <span class="glyphicon glyphicon-ok form-control-feedback email-tick"></span> -->
			</div>
			<br/>

			<!-- Message Body -->
			<div>
				<textarea class="form-control textarea-limited" rows="7"></textarea>
			</div>
			<br/>
			<button class="btn btn-default btn-pear">Submit</button>
		</div>
	</div>
	{{outlet}}
</div>
