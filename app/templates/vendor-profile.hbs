<div class="container index-main">

	<div class="card vendor-card">
		<h1>{{model.name}}</h1>
		<hr class="style-two">
		<h3>Vendor Details:</h3><br>
		<h4>Description:</h4>{{model.desc}}
		<br>
		<h4>Email:</h4><a href="mailto:pear+{{model.email}}?cc=info@pear.life" target="_top">{{model.email}}</a>
		<br>
		<h4>Cellphone:</h4>{{model.cell}}
	</div><br>


	{{#image-loader}}
	<div class="text-center" id="#imageLoaderDiv">
			{{#masonry-grid items=model.catItems isFitWidth=true columnWidth=360 storeMasonryRef="storeMasonryRef" gutter=8 as |cat-item|}}
				<div>
					<div class="category-block">
						<div class="cat-overlay-1">
							<h2>{{cat-item.name}}</h2>
						</div>
						{{#link-to 'single-item' cat-item.id tagname='div' class="text-center cat-img-container"}}
							{{#image-component loadedImg="loadedImg" src=cat-item.imageURL class="img-responsive cat-image"}}{{/image-component}}
						{{/link-to}}
						<div class="cat-overlay-2">
							{{#favourite-button cat-item.id session.currentUser.providerData.0.uid}}{{/favourite-button}}
						</div>
						
					</div>
				</div>
			{{/masonry-grid}} 	
	</div>
	{{/image-loader}}
	<div class="row text-center">
	    {{#each model.catItems as |cat-item|}}
		<div class="col-lg-4 col-md-6">
			<div class="category-block-mobile">
				<h2>{{cat-item.name}}</h2>
				{{#link-to 'single-item' cat-item.id tagname='div' class="text-center cat-img-container"}}
					<img src="{{cat-item.imageURL}}" class="img-responsive cat-image">
				{{/link-to}}
				{{!-- <div class="cat-overlay-2"> --}}
					<div class="cat-overlay-3">
						{{#favourite-button cat-item.id session.currentUser.providerData.0.uid}}{{/favourite-button}}
					</div>
				{{!-- </div> --}}
			</div>
		</div>
	    {{/each}}
	</div>
</div>